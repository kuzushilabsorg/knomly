# =============================================================================
# Knomly Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# Note: All variables are prefixed with KNOMLY_ for namespace isolation

# =============================================================================
# Core Configuration
# =============================================================================

# Service identification
KNOMLY_SERVICE_NAME=knomly

# Environment: development, staging, production
KNOMLY_ENVIRONMENT=development

# Enable debug mode (verbose logging, reload on change)
KNOMLY_DEBUG=true

# Log level: DEBUG, INFO, WARNING, ERROR
KNOMLY_LOG_LEVEL=INFO

# Configuration directory (relative or absolute path)
KNOMLY_CONFIG_DIR=configs

# Enable PipelineResolver for database-driven configuration
KNOMLY_USE_RESOLVER=true

# =============================================================================
# Database Configuration
# =============================================================================

# MongoDB connection URL
KNOMLY_MONGODB_URL=mongodb://localhost:27017

# MongoDB database name
KNOMLY_MONGODB_DATABASE=knomly

# =============================================================================
# Provider API Keys
# =============================================================================
# Only configure the providers you plan to use.

# --- Speech-to-Text (STT) Providers ---

# Google Gemini (for STT and LLM)
KNOMLY_GEMINI_API_KEY=

# OpenAI (for Whisper STT and GPT LLM)
KNOMLY_OPENAI_API_KEY=

# Deepgram (for STT)
KNOMLY_DEEPGRAM_API_KEY=

# --- Large Language Model (LLM) Providers ---

# Anthropic Claude
KNOMLY_ANTHROPIC_API_KEY=

# --- Text-to-Speech (TTS) Providers ---

# ElevenLabs
KNOMLY_ELEVENLABS_API_KEY=

# =============================================================================
# Default Provider Selection
# =============================================================================
# Which provider to use by default when not specified in pipeline config

# STT: gemini, whisper, deepgram
KNOMLY_DEFAULT_STT_PROVIDER=gemini

# LLM: openai, anthropic, gemini
KNOMLY_DEFAULT_LLM_PROVIDER=openai

# Chat: zulip
KNOMLY_DEFAULT_CHAT_PROVIDER=zulip

# =============================================================================
# Chat Provider Configuration
# =============================================================================

# --- Zulip ---
# Your Zulip server URL
KNOMLY_ZULIP_SITE=https://your-zulip-instance.zulipchat.com

# Bot email address (create a bot in Zulip settings)
KNOMLY_ZULIP_BOT_EMAIL=knomly-bot@your-zulip-instance.zulipchat.com

# Bot API key
KNOMLY_ZULIP_API_KEY=

# =============================================================================
# Transport Configuration
# =============================================================================

# --- Twilio (WhatsApp & SMS) ---
# Get credentials from https://console.twilio.com

# Account SID (starts with AC)
KNOMLY_TWILIO_ACCOUNT_SID=

# Auth Token
KNOMLY_TWILIO_AUTH_TOKEN=

# WhatsApp-enabled phone number (format: whatsapp:+1234567890)
KNOMLY_TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# =============================================================================
# Integration Credentials
# =============================================================================

# --- Plane (Project Management) ---
# Get API key from Plane workspace settings

KNOMLY_PLANE_API_KEY=

# Plane API base URL (self-hosted or cloud)
KNOMLY_PLANE_BASE_URL=https://api.plane.so/api/v1

# Workspace slug
KNOMLY_PLANE_WORKSPACE=your-workspace-slug

# =============================================================================
# Advanced Configuration (Optional)
# =============================================================================

# Redis URL for agent memory (if using Redis backend)
# KNOMLY_REDIS_URL=redis://localhost:6379

# Qdrant URL for RAG/vector search
# KNOMLY_QDRANT_URL=http://localhost:6333
# KNOMLY_QDRANT_COLLECTION=knomly

# n8n webhook base URL for workflow triggers
# KNOMLY_N8N_WEBHOOK_BASE=http://localhost:5678/webhook

# =============================================================================
# Production Settings (uncomment for production)
# =============================================================================

# KNOMLY_ENVIRONMENT=production
# KNOMLY_DEBUG=false
# KNOMLY_LOG_LEVEL=WARNING
